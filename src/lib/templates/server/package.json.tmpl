{
  "name": "neth-express-api-ts",
  "version": "0.3.5",
  "description": "An Express Rest Api written in Typescript that provides convenient authorization, access control lists and routes following best practices.",
  "main": "src/server.ts",
  "scripts": {
    "dev": "nodemon --exec ts-node -T ./src/server.ts",
    "lint": "eslint ./src",
    "build": "tsc && echo true > .buildstatus",
    "run:prod": "npm run build && SET NODE_ENV=production&&node dist/server.js",
    "test": "mocha -r ts-node/register/transpile-only tests/*.test.ts --timeout 30000 --exit",
    "test:coverage": "nyc npm run test",
    "make:badges": "jest-badges-readme",
    "make:readme": "npm run test:coverage && npm run make:badges"
  },
  "nodemonConfig": {
    "watch": [
      "./swagger.yaml",
      "src/**/*.ts"
    ],
    "ignore": [
      "tests/**/*.ts"
    ],
    "extension": [
      "yaml"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "json-summary",
      "lcov",
      "html",
      "text"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "keywords": [
    "Typescript",
    "Express",
    "NodeJS",
    "REST",
    "Api",
    "Mongoose"
  ],
  "author": "Netherium",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Netherium/neth-express-api-ts.git"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "aws-sdk": "^2.1009.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.1",
    "filenamify": "^4.3.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.13.11",
    "mongoose-fuzzy-searching": "^2.0.2",
    "morgan": "^1.10.0",
    "sharp": "^0.29.1",
    "swagger-ui-express": "^4.1.6",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@olavoparno/jest-badges-readme": "1.4.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.17.13",
    "@types/express-fileupload": "^1.1.7",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/mocha": "^9.0.0",
    "@types/morgan": "^1.9.3",
    "@types/sharp": "^0.29.2",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/yamljs": "^0.2.31",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "eslint": "^7.32.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "mocha": "^9.1.3",
    "nodemon": "^2.0.13",
    "nyc": "^15.1.0",
    "ts-node": "^10.3.0",
    "typescript": "^4.4.4"
  }
}
