{
  "name": "neth-express-api-ts",
  "version": "0.2.4",
  "description": "An Express Rest Api written in Typescript that provides convenient authorization, access control lists and routes following best practices.",
  "main": "src/server.ts",
  "scripts": {
    "dev": "nodemon --exec ts-node -T ./src/server.ts",
    "build": "tsc && echo true > .buildstatus",
    "run:prod": "npm run build && SET NODE_ENV=production&&node dist/server.js",
    "test": "mocha -r ts-node/register test/*.test.ts --timeout 30000 --exit",
    "test:coverage": "nyc npm run test",
    "make:badges": "jest-badges-readme",
    "make:readme": "npm run test:coverage && npm run make:badges"
  },
  "nodemonConfig": {
    "watch": [
      "./swagger.yaml",
      "src/**/*.ts"
    ],
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "extension": [
      "yaml"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "json-summary",
      "lcov",
      "html",
      "text"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "keywords": [
    "Typescript",
    "Express",
    "NodeJS",
    "REST",
    "Api",
    "Mongoose"
  ],
  "author": "Netherium",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Netherium/neth-express-api-ts.git"
  },
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@olavoparno/jest-badges-readme": "^1.4.2",
    "@types/body-parser": "^1.19.0",
    "@types/compression": "0.0.36",
    "@types/cors": "^2.8.7",
    "@types/dotenv": "^6.1.1",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.17.7",
    "@types/express-fileupload": "^1.1.3",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mocha": "^5.2.7",
    "@types/mongoose": "^5.7.34",
    "@types/morgan": "^1.9.1",
    "@types/sharp": "^0.25.1",
    "@types/swagger-ui-express": "^3.0.1",
    "@types/yamljs": "^0.2.31",
    "aws-sdk": "^2.726.0",
    "bluebird": "^3.7.2",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^7.0.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-fileupload": "^1.1.9",
    "filenamify": "^4.1.0",
    "jsonwebtoken": "^8.5.1",
    "mocha": "^6.2.3",
    "mongoose": "^5.9.27",
    "mongoose-fuzzy-searching": "^1.3.1",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.4",
    "nyc": "^14.1.1",
    "sharp": "^0.25.4",
    "swagger-ui-express": "^4.1.4",
    "ts-node": "^8.10.2",
    "tslint": "^5.20.1",
    "typescript": "^3.9.7",
    "yamljs": "^0.3.0"
  }
}
